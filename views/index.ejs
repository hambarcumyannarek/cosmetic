    <script defer src="./scripts/navbar.js"></script>
    <script>
        const stringifyProducts = '<%- JSON.stringify(products)%>';
        const products = JSON.parse(stringifyProducts);

        let setIntervalId = undefined;
        document.querySelectorAll('#shop .card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                let index = 0;
                const img = card.querySelector('img');
                const findProduct = products.find(product => {
                    return product.id === +card.getAttribute('id');
                })
                setIntervalId = setInterval(async() => {
                    card.classList.remove('active');
                    index++;
                    index === findProduct.images.length ? index = 0 : index;
                    await setTimeout(() => {
                        card.classList.add('active');
                        img.src = findProduct.images[index];
                    }, 100)
                }, 1500)
            })

            card.addEventListener('mouseleave', () => {
                clearInterval(setIntervalId);
            });
        })
    </script>
